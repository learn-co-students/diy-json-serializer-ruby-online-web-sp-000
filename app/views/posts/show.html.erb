<div class="authorName"><%= @post.author.name %></div>
<a href="#" class="js-next" data-id="<%=@post.id%>">Next...</a>
<h1 class="postTitle"><%= @post.title %></h1>
<p class="postBody"><%= @post.description %></p>

<script type="text/javascript" charset="utf-8">
  $(function(){
    $('.js-next').on('click', function(e){
      e.preventDefault();
      let nextId = $(this).data("id") + 1;

      $.getJSON(`/posts/${nextId}/post_data`, function(postData){
        $('.postTitle').text(postData["title"]);
        $('.postBody').text(postData["description"]);
        $(".js-next").data("id", postData["id"]);
      })
    })
  })
</script>